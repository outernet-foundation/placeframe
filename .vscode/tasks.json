{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "uv sync all Python projects",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/scripts/sync_python_projects.py",
        "${workspaceFolder}"
      ],
      "problemMatcher": [],
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "revealProblems": "onProblem",
        "close": true
      }
    }
  ]
}
