{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸ”„ uv sync all Python projects",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/.vscode/scripts/sync_python_projects.py",
        "${workspaceFolder}"
      ],
      "problemMatcher": [],
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "revealProblems": "onProblem",
        "close": true
      }
    },
    {
      "label": "discover_workers",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "mkdir -p '${workspaceFolder}/.vscode/temp' && '${workspaceFolder}/.vscode/scripts/list_debug_targets.py' '${input:pickService}' 2>&1 | tee '${workspaceFolder}/.vscode/temp/targets.log' > '${workspaceFolder}/.vscode/temp/targets.txt'"
      ],
      "problemMatcher": [],
      "presentation": { "reveal": "always", "panel": "dedicated", "clear": true }
    }
  ],
  "inputs": [
    {
      "id": "pickService",
      "type": "pickString",
      "description": "Select worker service",
      "options": [
        "reconstruction-worker",
        "features-worker"
      ]
    }
  ]
}
