{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to API",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "127.0.0.1", "port": 5678 },
      "justMyCode": false,
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "/app" }
      ]
    },
    {
      "name": "Attach to worker",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "127.0.0.1", "port": "${input:dockerWorkerPort}" },
      "justMyCode": false,
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "/app" }
      ]
    },
    {
      "name": "Debug standalone script",
      "type": "debugpy",
      "request": "attach",
      "listen": { "host": "127.0.0.1", "port": 5678 },
      "justMyCode": false,
      "preLaunchTask": "Prelaunch: Debug standalone script"
    }
  ],
  "inputs": [
    {
      "id": "dockerWorkerPort",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "python '.vscode/scripts/list_debug_targets.py'",
        "cwd": "${workspaceFolder}",
        "description": "Select worker container",
        "fieldSeparator": "|",
        "useSingleResult": true,
        "filterEmptyResults": true,
        "warnOnStderr": true
      }
    }
  ]
}
