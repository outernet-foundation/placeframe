{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to API",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "127.0.0.1", "port": 5679 },
      "justMyCode": false,
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "/app" }
      ]
    },
    {
      "name": "Attach to task",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "127.0.0.1", "port": "${input:dockerTaskPort}" },
      "justMyCode": false,
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "/app" }
      ]
    },
    {
      "name": "Debug workspace synchronizer",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "127.0.0.1", "port": 5678 },
      "justMyCode": false,
      "preLaunchTask": "Prelaunch: Debug workspace synchronizer"
    },
    {
      "name": "Attach to Unity - Editor",
      "type": "vstuc",
      "request": "attach"
    },
    {
      "name": "Attach to Unity - Android",
      "type": "vstuc",
      "request": "attach",
      "endPoint": "127.0.0.1:56000",
      "preLaunchTask": "Prelaunch: Attach to Unity - Android"
    }
  ],
  "inputs": [
    {
      "id": "dockerTaskPort",
      "type": "command",
      "command": "shellCommand.execute",
      "args": {
        "command": "uv run src/list_debug_targets.py",
        "cwd": "${workspaceFolder}/scripts",
        "description": "Select task container",
        "fieldSeparator": "|",
        "useSingleResult": true,
        "filterEmptyResults": true,
        "warnOnStderr": true
      }
    }
  ]
}
